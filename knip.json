{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "workspaces": {
    "packages/birmel": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/tools": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/eslint-config": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/dagger-utils": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/bun-decompile": {
      "entry": ["src/index.ts", "src/lib/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/webring": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/astro-opengraph-images": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    }
  },
  "ignore": ["**/generated/**", "**/dist/**", "archive/**"]
}
