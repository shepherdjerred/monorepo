{
  "name": "scout-for-lol",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/data",
    "packages/report",
    "packages/frontend",
    "packages/desktop",
    "packages/ui"
  ],
  "scripts": {
    "typecheck": "bun run --filter='*' typecheck",
    "lint": "bun run --filter='*' lint",
    "lint:ci": "bunx eslint packages/ --format json --output-file eslint-report.json || true",
    "format": "bun run --filter='*' format",
    "test": "bun run --filter='*' test",
    "clean": "rm -rf node_modules packages/*/node_modules",
    "generate": "bun run --filter='*' generate",
    "knip": "knip-bun",
    "knip:ci": "knip-bun --reporter json > knip-report.json || true",
    "duplication-check": "bun run scripts/check-duplication.ts"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/js": "^9.30.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bun": "^1.2.18",
    "@types/eslint-plugin-jsx-a11y": "^6.10.1",
    "@types/node": "^25.0.0",
    "@types/react": "^19.1.13",
    "bun-types": "latest",
    "eslint": "^9.30.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-import-resolver-typescript-bun": "^0.0.104",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-regexp": "^3.0.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "jiti": "^2.6.0",
    "jscpd": "^4.0.5",
    "knip": "^5.70.1",
    "markdownlint-cli2": "^0.20.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.35.1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "autoprefixer": "^10.4.24",
    "ffmpeg-static": "^5.3.0",
    "openai": "^6.9.1",
    "react": "^19.1.1",
    "zod": "^4.0.0"
  },
  "patchedDependencies": {
    "satori@0.18.3": "packages/scout-for-lol/patches/satori@0.18.3.patch"
  }
}
