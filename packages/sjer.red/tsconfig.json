{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["assets/*"],
      "@styles/*": ["src/styles/*"],
      "@images/*": ["src/images/*"]
    }
  },
  "exclude": ["eslint.config.ts", "astro.config.ts"]
}
