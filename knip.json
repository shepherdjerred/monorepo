{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "workspaces": {
    "packages/birmel": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/tools": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/eslint-config": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/dagger-utils": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/bun-decompile": {
      "entry": ["src/index.ts", "src/lib/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/webring": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/astro-opengraph-images": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/better-skill-capped": {
      "entry": ["src/index.tsx"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/starlight-karma-bot": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/sjer.red": {
      "entry": ["src/**/*.astro", "src/**/*.ts", "src/**/*.tsx"],
      "project": ["src/**/*.{ts,tsx,astro}"]
    },
    "packages/dpp/common": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/dpp/backend": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/dpp/frontend": {
      "entry": ["src/main.tsx"],
      "project": ["src/**/*.{ts,tsx}"]
    }
  },
  "ignore": ["**/generated/**", "**/dist/**", "archive/**"]
}
