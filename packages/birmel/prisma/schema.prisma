generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model DailyPostConfig {
  id         Int       @id @default(autoincrement())
  guildId    String    @unique
  channelId  String
  enabled    Boolean   @default(true)
  postTime   String    @default("09:00")
  timezone   String    @default("UTC")
  lastPostAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model ServerEvent {
  id        Int      @id @default(autoincrement())
  guildId   String
  eventType String
  eventData String
  actorId   String?
  createdAt DateTime @default(now())

  @@index([guildId, createdAt])
}

model ScheduledAnnouncement {
  id          Int       @id @default(autoincrement())
  guildId     String
  channelId   String
  message     String
  scheduledAt DateTime
  sentAt      DateTime?
  repeat      String?
  createdBy   String
  createdAt   DateTime  @default(now())

  @@index([guildId])
  @@index([scheduledAt])
}

model MusicHistory {
  id        Int      @id @default(autoincrement())
  guildId   String
  trackUrl  String
  trackName String
  duration  Int
  userId    String
  createdAt DateTime @default(now())

  @@index([guildId, createdAt])
}

model PollRecord {
  id          Int      @id @default(autoincrement())
  guildId     String
  channelId   String
  messageId   String   @unique
  pollId      String
  question    String
  createdBy   String
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  @@index([guildId, createdAt])
}

model UserActivity {
  id           Int      @id @default(autoincrement())
  guildId      String
  userId       String
  channelId    String
  activityType String
  metadata     String?
  createdAt    DateTime @default(now())

  @@index([guildId, userId, createdAt])
  @@index([guildId, activityType, createdAt])
}

model Birthday {
  id         Int      @id @default(autoincrement())
  userId     String
  guildId    String
  birthMonth Int
  birthDay   Int
  birthYear  Int?
  timezone   String   @default("UTC")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, guildId])
  @@index([guildId, birthMonth, birthDay])
}

model GuildOwner {
  id             Int       @id @default(autoincrement())
  guildId        String    @unique
  currentOwner   String
  nickname       String
  lastElectionAt DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model ElectionPoll {
  id             Int       @id @default(autoincrement())
  guildId        String
  channelId      String
  messageId      String?
  pollType       String
  status         String
  scheduledStart DateTime
  scheduledEnd   DateTime
  actualStart    DateTime?
  actualEnd      DateTime?
  candidates     String
  winner         String?
  voteCounts     String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([guildId, status])
  @@index([scheduledStart])
}

model ScheduledTask {
  id          Int       @id @default(autoincrement())
  guildId     String
  channelId   String?
  userId      String
  scheduledAt DateTime
  cronPattern String?
  naturalDesc String?
  toolId      String?
  toolInput   String?
  executedAt  DateTime?
  nextRun     DateTime?
  enabled     Boolean   @default(true)
  name        String?
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([guildId])
  @@index([enabled, scheduledAt])
}

model EditorSession {
  id             String    @id @default(uuid())
  userId         String
  guildId        String
  channelId      String
  threadId       String?
  messageId      String?
  repoName       String
  sdkSessionId   String?
  state          String    @default("active")
  pendingChanges String?
  summary        String?
  prUrl          String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  expiresAt      DateTime

  @@index([userId, state])
  @@index([guildId])
  @@index([threadId])
}

model GitHubAuth {
  id           String    @id @default(uuid())
  userId       String    @unique
  accessToken  String
  refreshToken String?
  expiresAt    DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
