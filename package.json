{
  "name": "@shepherdjerred/share",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/clauderon/web/*",
    "packages/clauderon/docs",
    "packages/discord-plays-pokemon/packages/*",
    "packages/homelab/src/*",
    "packages/scout-for-lol/packages/*"
  ],
  "scripts": {
    "build": "bun run scripts/run-package-script.ts build",
    "test": "bun run scripts/run-package-script.ts test",
    "typecheck": "bun run scripts/run-package-script.ts typecheck",
    "lint": "bun run scripts/run-package-script.ts lint",
    "guard:migration": "bun run scripts/guard-no-package-exclusions.ts",
    "docs:dev": "bun run --filter='./packages/clauderon/docs' dev",
    "docs:build": "bun run --filter='./packages/clauderon/docs' build",
    "docs:preview": "bun run --filter='./packages/clauderon/docs' preview",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@dagger.io/dagger": "^0.19.0",
    "lefthook": "^2.1.1",
    "typescript": "^5.9.3"
  }
}
