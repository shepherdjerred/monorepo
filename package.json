{
  "name": "@shepherdjerred/share",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "!packages/clauderon",
    "packages/clauderon/web/*",
    "packages/clauderon/docs",
    "!packages/anki",
    "!packages/castle-casters",
    "!packages/dotfiles",
    "!packages/macos-cross-compiler",
    "!packages/discord-plays-pokemon",
    "!packages/scout-for-lol",
    "!packages/homelab"
  ],
  "scripts": {
    "build": "bun run --filter='./packages/**' build",
    "test": "bun run --filter='./packages/**' test",
    "typecheck": "bun run --filter='./packages/**' typecheck",
    "lint": "bun run --filter='./packages/**' lint",
    "docs:dev": "bun run --filter='./packages/clauderon/docs' dev",
    "docs:build": "bun run --filter='./packages/clauderon/docs' build",
    "docs:preview": "bun run --filter='./packages/clauderon/docs' preview",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@dagger.io/dagger": "^0.19.0",
    "@prisma/client": "^6.0.0",
    "lefthook": "^2.1.1",
    "prisma": "^6.0.0",
    "typescript": "^5.9.3"
  }
}
